
<!--フォーム-->
<div>
   <h3>配送先登録/一覧</h3>
    <%= form_for(@address, url: "/addresses") do |f| %>
     <div>
  	   <label>郵便番号</label>
  	   <%= f.text_field :post_code %>
     </div>
     <div>
  	   <label>住所</label>
  	   <%= f.text_field :shipping_address %>
     </div>
     <div>
       <label>宛名</label>
       <%= f.text_field :shipping_name %>
     </div>
     <div>
  	   <%= f.submit "登録する" %>
     </div>
    <% end %>
  </div>

<!--配送先一覧-->
<div>
   <% @addresses.each do |address| %>
     <tr><th>郵便番号</th><th>住所</th><th>宛名</th><th></th></tr><!--見出し-->
     <tr>
     	<td><%= address.post_code %></td><!--郵便番号-->
     	<td><%= address.shipping_address %></td><!--住所-->
     	<td><%= address.shipping_name %></td><!--住所-->
     	<td>
     		<%= link_to "編集する",  edit_address_path(address.id) %><!--編集ボタン、idいる-->
     		<%= link_to "削除する", address_path(address.id), method: :delete %><!--削除ボタン、idいる-->
     	</td>
     </tr>
   <% end %>
</div>

