  <p>注文履歴一覧</p>
  <table>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払い金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
   <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td>
        <%= order.postcode %><br>
        <%= order.shipping_address %><br>
        <%= order.shipping_name %>
      </td>
      <% order.orderd_products.each do |o_product| %>
      <td><%= o_product.product.name %></td>
        <% end %>
      <td><%= order.total_amount %></td>
      <td><%= order.order_status %></td>
      <td><%= link_to order_path(order) do %>
      	注文詳細
      	<% end %>
      </td>
    </tr>
   <% end %>
   </table>