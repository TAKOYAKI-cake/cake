<!DOCTYPE html>
<html>
  <head>
    <title>Cake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
       <%=link_to root_path do %>
       <%= image_tag 'logo.png' %>
       <% end %>
      <ul class="navbar-nav navbar-right">
        <% if customer_signed_in? %>
            <li class= "btn btn-info"><%= @customer.family_name %> <%= @customer.last_name %></li>
            <li  class= "btn btn-info">
              <%= link_to "マイページ", customer_path(@customer) %>
            </li>
            <li class= "btn btn-info">カート</li>
            <li class= "btn btn-info">アバウト</li>
            <li class= "btn btn-danger">
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
            </li>
          <% elsif admin_signed_in? %>
            <li><%= link_to "商品一覧" , admin_products_path %></li>
            <li><%= link_to "会員一覧" , admin_customers_path %></li>
            <li><%= link_to "注文履歴一覧" , admin_orders_path %></li>
            <li><%= link_to "ジャンル管理" , admin_genres_path %></li>
            <li><%= link_to destroy_admin_session_path, method: :delete  do %>ログアウト</li>
            <% end %>
          <% else %>
            <li>
              <%= link_to new_customer_session_path do %>
                ログイン
              <% end %>
            </li>
            <li>アバウト</li>
        <% end %>
      </ul>
    </header>
    <%= yield %>
  </body>
</html>
