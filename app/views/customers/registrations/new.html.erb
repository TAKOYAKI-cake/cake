<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<table>
  <tr>
    <th>氏名</th>
    <th>
      <div class="field">
        <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>
    </th>
  </tr>

  <tr>
    <th>カナ</th>
    <th>
      <div class="field">
        <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
      </div>
    </th>
  </tr>

  <tr>
    <th>郵便番号</th>
    <th>
      <div class="field">
        <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
      </div>
    </th>
  </tr>

  <tr>
    <th>住所</th>
    <th>
      <div class="field">
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>
    </th>
  </tr>

  <tr>
    <th>電話番号</th>
    <th>
      <div class="field">
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
      </div>
    </th>
  </tr>

  <tr>
    <th>メールアドレス</th>
    <th>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </th>
  </tr>

  <tr>
    <th>パスワード</th>
    <th>
      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </th>
  </tr>

  <tr>
    <th>パスワード確認</th>
    <th>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </th>
  </tr>
</table>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

