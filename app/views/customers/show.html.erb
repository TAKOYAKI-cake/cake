<h3>マイページ</h3>
	<div>
		<p>登録情報</p>
		<%= link_to edit_customer_path(@customer) do %>
		編集する
		<% end %>
		<%= link_to edit_customer_registration_path do %>
		パスワードを編集する
		<% end %>
	</div>
<table>
	<tr>
		<th>氏名</th>
		<th><%= @customer.family_name %><%= @customer.last_name %></th>
	</tr>
	<tr>
		<th>カナ</th>
		<th><%= @customer.family_name_kana %><%= @customer.last_name_kana %></th>
	</tr>
	<tr>
		<th>郵便番号</th>
		<th><%= @customer.post_code %></th>
	</tr>
	<tr>
		<th>住所</th>
		<th><%= @customer.address %></th>
	</tr>
	<tr>
		<th>電話番号</th>
		<th><%= @customer.telephone_number %></th>
	</tr>
	<tr>
		<th>メールアドレス</th>
		<th><%= @customer.email %></th>
	</tr>
</table>
<div>
	<p>配送先</p>
	<%= link_to addresses_path(@customer) do %>
		一覧を見る
	<% end %>
</div>
<div>
	<p>注文履歴</p>
	<%= link_to orders_path(@customer) do %>
	一覧を見る
	<% end %>
</div>
