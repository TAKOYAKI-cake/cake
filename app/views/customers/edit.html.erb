<div class="container">
	<div class="row">
		<div class="col-xs-9 col-xs-offset-1">
			<h3>登録情報編集<%= link_to "退会する", congfirm_path , class: "btn btn-danger" %></h3>
			<%= form_for(@customer) do |f| %>
			<table class="table table-bordered">
				<tr>
					<th class="warning">氏名</th>
					<td>
						<div class="field">
							<%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
							<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
						</div>
					</td>
				</tr>

				<tr>
					<th class="warning">カナ</th>
					<td>
						<div class="field">
							<%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %>
							<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
						</div>
					</td>
				</tr>

				<tr>
					<th class="warning">郵便番号</th>
					<td>
						<div class="field">
							<%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
						</div>
					</td>
				</tr>

				<tr>
					<th class="warning">住所</th>
					<td>
						<div class="field">
							<%= f.text_field :address, autofocus: true, autocomplete: "address" %>
						</div>
					</td>
				</tr>

				<tr>
					<th class="warning">電話番号</th>
					<td>
						<div class="field">
							<%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
						</div>
					</td>
				</tr>

				<tr>
					<th class="warning">メールアドレス</th>
					<td>
						<div class="field">
							<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
						</div>
					</td>
				</tr>
			</table>
		</div>
		<div class="row">
			<div class="actions col-xs-2 col-xs-offset-9">
				<%= f.submit "編集内容を保存する", class: "btn btn-info" %>
			</div>
			<% end %>
		</div>
	</div>
</div>