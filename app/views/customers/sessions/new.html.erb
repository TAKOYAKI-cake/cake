<div class="container">
  <p><font color="red"><%= flash[:notice] %></font></p>
  <font color="red"><%= alert %></font>
  <div class="row">
    <p class="col-xs-12 col-xs-offset-2">会員の方はこちらからログイン</p><!--赤文字-->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="col-xs-12 col-xs-offset-3">
      <table>
        <tr>
          <th class="col-xs-3">
            <%= f.label :メールアドレス %>
          </th>
          <td>
            <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"col-xs-12"%>
            </div>
          </td>
        </tr>
        <tr>
          <th><br></th>
        </tr>
        <tr>
          <th class="col-xs-3">
            <%= f.label :パスワード %>
          </th>
          <td>
            <%= f.password_field :password, autocomplete: "current-password",class:"col-xs-12" %>
          </td>
        </tr>
    </table>
    <br>
    </div>
    <div class="row">
      <div class="col-xs-7 col-xs-offset-4" class="actions">
        <%= f.submit "ログイン",class:"btn btn-info" %>
        <%= render "customers/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

