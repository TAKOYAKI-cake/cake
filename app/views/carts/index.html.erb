<!--配送先一覧-->
<h1>ショッピングカート</h1>
<div>
	<%= link_to "カートを空にする", carts_destroy_all_path, method: :delete %>
    <!--全て削除botann-->
</div>
<div>
	<tr>
		<th>商品名</th><th>単価（税込）</th><th>数量</th><th>小計</th><th></th>
	</tr><!--見出し-->
	<% array = [] %><!--空の配列を用意-->
   <% @cart_items.each do |cart_item| %>
     <tr>
     	<td><!--商品名-->
     		<%= attachment_image_tag cart_item.product, :image,:fill, 40, 80 %>
     		<%= cart_item.product.name %>
     	</td>
     	<td><%= (cart_item.product.price) * 1.08 %></td><!--単価(税込み)-->
     	<td>
     		<%= form_for cart_item, url:"/carts/#{cart_item.id}" do |f| %><!--繰り返しのcart_itemを使って繰り返し取り出す-->
     		  <%= f.text_field :quantity %>
     		  <%= f.submit '変更する' %>
     		<% end %>
        </td>
        <td><!--小計-->
        	<%= (cart_item.product.price * 1.08 *  cart_item.quantity).floor %>
        </td>
        <td>
     		<%= link_to "削除する", "/carts/#{cart_item.id}", method: :delete %><!--繰り返しの<cart_itemを使って繰り返し取り出す-->
     	</td>
     	<% array << cart_item.product.price * cart_item.quantity %><!--#bookテーブルのレコードを１件ずつ取り出す繰り返しのたびに、計算した値を配列に入れる-->
     </tr>
   <% end %>
</div>
<div>
	<%=link_to "買い物を続ける",products_path %><!--買い物を続けるリンク-->
</div>
<div>
    <tr>
        <th>合計金額</th>
        <td>
	      <%= (array.sum * 1.08).floor %><!--合計金額の文字必要、上の繰り返しでとった値を合計して税金計算、小数点以下切り捨て-->
        </td>
    </tr>
</div>
<div>
    <%= link_to"情報入力に進む",new_order_path %>
</div>

