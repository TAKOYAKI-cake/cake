<h1>商品編集画面</h1>

  <%= form_for(@product, url: admin_product_path) do |f| %>

    <%= f.attachment_field :image %>

    <%= f.text_field :name %>

    <%= f.text_area :description %>

    <h4>ジャンル</h4>
    <%= f.collection_select(:id, Genre.all, :id, :name, :prompt => "選択して下さい") %>

    <%= f.text_field :price %>

    <%= f.submit "変更を保存"　%>

  <% end %>