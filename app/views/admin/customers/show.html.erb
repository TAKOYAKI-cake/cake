<h1>会員詳細画面</h1>
<table>
  <tbody>
    <tr>
      <td>顧客ID</td>
      <th><%= @customer.id %></th>
    </tr>
    <tr>
      <td>氏名</td>
      <th><%= @customer.family_name %>　<%= @customer.last_name %></th>
    </tr>
    <tr>
      <td>フリガナ</td>
      <th><%= @customer.family_name_kana %>　<%= @customer.last_name_kana %></th>
    </tr>
    <tr>
      <td>郵便番号</td>
      <th><%= @customer.post_code %></th>
    </tr>
    <tr>
      <td>住所</td>
      <th><%= @customer.address %></th>
    </tr>
    <tr>
      <td>電話番号</td>
      <th><%= @customer.telephone_number %></th>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <th><%= @customer.email %></th>
    </tr>
    <tr>
      <td>
        <a><%= link_to "編集", edit_admin_customer_path(@customer) %></a>
      </td>
      <td>
        <a class="btn btn-success btn-sm" href="/admin/orders">注文履歴一覧を見る</a>
      </td>
    </tr>


  </tbody>

</table>

