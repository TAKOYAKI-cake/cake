<div class="container">
  <div class="row">
    <div class="col-xs-10 p-6">
      <h3>会員編集画面</h3>
      <table>
        <tbody>
          <%= form_for(@customer, url: admin_customer_path) do |f| %>
          <tr>
            <td>会員ID</td>
            <th><%= @customer.id %></th>
          </tr>
          <tr>
            <td>氏名</td>
            <th><%= f.text_field :family_name %>　<%= f.text_field :last_name %></th>
          </tr>
          <tr>
            <td>フリガナ</td>
            <th><%= f.text_field :family_name_kana %>　<%= f.text_field :last_name_kana %></th>
          </tr>
          <tr>
            <td>郵便番号</td>
            <th><%= f.text_field :post_code %></th>
          </tr>
          <tr>
            <td>住所</td>
            <th><%= f.text_field :address,:size => "60*30" %></th>
          </tr>
          <tr>
            <td>電話番号</td>
            <th><%= f.text_field :telephone_number %></th>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <th><%= f.text_field :email %></th>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <th>
              <label><%= f.radio_button :is_deleted, "false" %>有効</label>
              <label><%= f.radio_button :is_deleted, "true" %> 退会済み</label>
            </th>
          </tr>
          <tr>
            <th>
              <%= f.submit "変更を保存する",class: "btn btn-info" %>
            </th>
          </tr>
          <% end %>

        </tbody>

      </table>
    </div>
  </div>