<div class="container">
  <div class="row">
    <h3>会員一覧画面</h3>
    <div class="col-xs-10 col-xs-offset-1">
      <table class="table">
        <thead>
          <tr class="active">
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <th><%= customer.id %></th>
            <th>
              <%= link_to admin_customer_path(customer.id) do %>
              <%= customer.family_name %><%= customer.last_name %>
              <% end %>
            </th>
            <th><%= customer.email %></th>
            <th><%= customer.is_deleted ? '退会済み' : '有効' %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= paginate @customers, class: "paginate" %>
  </div>
</div>