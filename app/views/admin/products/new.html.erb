
<h2>商品 新規登録画面</h2>

<%= form_for @new_product, :url => { :controller => :products, :action => :create } do |f| %>

    <h4>商品名</h4>
    <%= f.text_field :name %>
    <h4>商品説明</h4>
    <%= f.text_area :description %>
    <h4>ジャンル</h4>
    <%= f.collection_select(:id, Genre.all, :id, :name, :prompt => "選択して下さい") %>

    <h4>税抜価格</h4>
    <%= f.text_field :price %>

    <h4>販売ステータス</h4>

    <%= f.submit "新規登録" %>

<% end %>