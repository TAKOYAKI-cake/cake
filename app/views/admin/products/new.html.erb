
<h2>商品 新規登録画面</h2>

<%= form_for @new_product, :url => { :controller => :products, :action => :create } do |f| %>

    <%= attachment_image_tag @product, :image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left image",fallback: "no_image.jpg" %>
    <%= f.attachment_field :image %>

    <h4>商品名</h4>
    <%= f.text_field :name %>
    <h4>商品説明</h4>
    <%= f.text_area :description %>
    <h4>ジャンル</h4>
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, :prompt => "--選択して下さい--") %>

    <h4>税抜価格</h4>
    <%= f.text_field :price %>

    <h4>販売ステータス</h4>
    <%#<%= f.collection_select(:sales_status, Product.all, :id, :name, :prompt => "--選択して下さい--") %>

    <%= f.select :sales_status, Product.sales_statuses.keys, :prompt => "--選択して下さい--" %>

    <%= f.submit "新規登録" %>

<% end %>