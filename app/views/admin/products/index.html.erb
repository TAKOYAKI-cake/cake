<div class="container">
    <div class="row">
        <h3>商品一覧画面</h3>
        <div class="text-right">
            <%= link_to "商品新規登録", new_admin_product_path,class:"btn btn-info" %>
        </div>
        <div class="col-xs-10 col-xs-offset-1">
            <table class="table">
             <thead>
              <tr class="active">
                 <th>商品ID</th>
                 <th>商品名</th>
                 <th>税抜価格</th>
                 <th>ジャンル</th>
                 <th>ステータス</th>
             </tr>
         </thead>
         <tbody>
            <% @products.each do |product| %>
            <tr>
                <td>
                  <%= product.id %>
              </td>
              <td>
                  <%= link_to admin_product_path(product.id) do %>
                  <%= product.name %>
                  <% end %></td>
                  <td>
                      <%= product.price %>
                  </td>
                  <td>
                      <%= product.genre.name %>
                  </td>
                  <td>
                      <%= product.sales_status %>
                  </td>

              </tr>
              <% end %>
          </tbody>
      </table>
  </div>
  <div class ="text-center">
      <%= paginate @products,　class: "paginate" %>
  </div>
</div>
</div>

