<h1>商品編集画面</h1>

  <%= form_for(@product, url: admin_product_path) do |f| %>

    <%= attachment_image_tag @product, :image, :fill, 150, 150 %>
    <%= f.attachment_field :image %>
    
    <h4>商品名</h4>
    <%= f.text_field :name %>
    
    <h4>商品説明</h4>
    <%= f.text_area :description %>

    <h4>ジャンル</h4>
    <%= f.collection_select(:genre_id, Genre.all, :id, :name ) %>

    <h4>税抜価格</h4>
    <%= f.text_field :price %>

    <h4>販売ステータス</h4>
    <%= f.select :sales_status, Product.sales_statuses.keys %>

    <br><%= f.submit "変更を保存" %>

  <% end %>