<div class="container">
    <div class="row">
        <div class="form-group">
            <h3>商品編集画面</h3>
            <div class="col-xs-4 col-xs-offset-1">
              <%= form_for(@product, url: admin_product_path) do |f| %>

              <%= attachment_image_tag @product, :image, :fill, 290, 200 %>
              <%= f.attachment_field :image %>
          </div>
          <div class="col-xs-7">
              <h4>商品名</h4>
              <%= f.text_field :name %>

              <h4>商品説明</h4>
              <%= f.text_area :description, :size=>"40x10" %>

              <h4>ジャンル</h4>
              <%= f.collection_select(:genre_id, Genre.all, :id, :name ) %>

              <h4>税抜価格</h4>
              <%= f.text_field :price %>

              <h4>販売ステータス</h4>
              <%= f.select :sales_status, Product.sales_statuses.keys %>

              <br><%= f.submit "変更を保存",class:"btn btn-info"%>
          </div>
          <% end %>
      </div>
  </div>