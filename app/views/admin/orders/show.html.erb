
<h1>注文詳細画面</h1>
<table class="table">
  <tbody>
    <tr>
      <td>購入者</td>
      <th><%= @customer.family_name %>　<%= @customer.last_name %></th>
    </tr>
    <tr>
      <td>配送先</td>
      <th><%= @order.shipping_address %><br>
        <%= @order.shipping_name %></th>
      </tr>
      <tr>
        <td>支払方法</td>
        <th><%= @order.method_of_payment %></th>
      </tr>
      <tr>
        <td>注文ステータス</td>
        <th><%= order.order_status %></th>
      </tr>
    </tbody>
  </table>

  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th>製作ステータス</th>
      </tr>
    </thead>
    <tbody>
     <% @order.orderd_products.each do |orderd_products| %>
     <tr>
      <th><%= orderd_product.product_name %></th>
      <th><%= orderd_product.price %></th>
      <th><%= orderd_product.quantity %></th>
      <th>小計</th>
      <th><%= orderd_product.making_status %></th>
    </tr>
    <% end %>
  </tbody>
</table>

<table>
  <tbody>
    <tr>
      <td>商品合計</td>
    </tr>
    <tr>
      <td>送料</td>
    </tr>
    <tr>
      <td>請求金額合計</td>
    </tr>
    <tr>
      <td>注文ステータス</td>
    </tr>
  </tbody>
</table>
