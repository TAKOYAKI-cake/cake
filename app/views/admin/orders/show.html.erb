<div class="container">
  <div class="row">
    <h3>注文詳細画面</h3>
    <table class="table">
      <tbody>
        <tr>
          <th>購入者</th>
          <td><%= @customer.family_name %>　<%= @customer.last_name %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.shipping_address %><br>
            <%= @order.shipping_name %></td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.method_of_payment %></td>
          </tr>
          <tr>
            <th>注文ステータス</th>
            <td><%= order.order_status %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="row">
      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
         <% @order.orderd_products.each do |orderd_products| %>
         <tr>
          <th><%= orderd_product.product_name %></th>
          <th><%= orderd_product.price %></th>
          <th><%= orderd_product.quantity %></th>
          <th>小計</th>
          <th><%= orderd_product.making_status %></th>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <table class="table">
      <tbody>
        <tr>
          <td>商品合計</td>
        </tr>
        <tr>
          <td>送料</td>
        </tr>
        <tr>
          <td>請求金額合計</td>
        </tr>
        <tr>
          <td>注文ステータス</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
