<div class="container">
  <div class="row">
    <div class="col-xs-10 p-6">
      <h1>注文一覧画面</h1>
      <table class="table">
        <thead>
          <tr class="active">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <th><%= link_to order.created_at, admin_order_path(order.id) %></th>
            <th><%= order.customer.family_name %><%= order.customer.last_name %></th>
            <th></th>
            <th><%= order.order_status %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @orders, class: "paginate" %>
</div>
