<div class="container">
  <div class="row">
    <div class="col-xs-10 p-6">
      <h1>注文一覧画面</h1>
      <table class="table">
        <thead>
          <tr class="active">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime("%Y年%m月%d日%H時%M分%S秒 "), admin_order_path(order.id) %></td>
            <td><%= order.customer.family_name %><%= order.customer.last_name %></td>
　　　　　　　　  <td><%= @total_quatity %>
               </td>
            <td><%= order.order_status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @orders, class: "paginate" %>
</div>
