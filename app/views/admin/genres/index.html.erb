<div class="container">
    <div class="row">
        <h3>ジャンル追加・一覧画面</h3>

        <%= form_for(@new_genre, url: admin_genres_path) do |f| %>

        <span>ジャンル
            <%= f.text_field :name %>
            <label><%=f.radio_button :is_active, "true"%>有効</label>
            <label><%=f.radio_button :is_active, "false"%>無効</label>
            <%= f.submit "追加",class:"btn btn-info" %>
        </span>
        <% end %>
    </div>
    <div class="row">
        <div class="col-xs-5">
            <table class="table table-hover table-inverse">
               <thead class="head-lignt">
                  <tr class="active">
                     <th>ジャンル</th>
                     <th>状態</th>
                     <th></th>
                 </tr>
             </thead>
             <tbody>
                <% @genres.each do |genre| %>
                <tr>
                    <td>
                      <%= genre.name %>
                  </td>
                  <td>
                   <%= genre.is_active ? '有効' : '無効' %>
               </td>
               <td>
                <%= link_to "編集", edit_admin_genre_path(genre.id),class:"btn btn-info" %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
</div>
</div>
</div>