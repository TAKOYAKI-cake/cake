<h1>ジャンル追加・一覧画面</h1>

<%= form_for(@new_genre, url: admin_genres_path) do |f| %>

    <h4>ジャンル</h4>
    <%= f.text_field :name %>
    <label><%=f.radio_button :is_active, "true"%>有効</label>
    <label><%=f.radio_button :is_active, "false"%>無効</label>
    <%= f.submit "追加" %>

<% end %>

    <table>
    	<thead>
    		<tr>
    			<th>ジャンル</th>
    			<th>状態</th>
    		</tr>
    	</thead>
    	<tbody>
                <% @genres.each do |genre| %>
    			<tr>
    				<td>
    				  <%= genre.name %>
    			    </td>
    			    <td>
    			      <%= genre.is_active ? '有効' : '無効' %>
    			    </td>
    			    <td>
    			    	<%= link_to "編集", edit_admin_genre_path(genre.id) %>
    			    </td>
    			</tr>
    			<% end %>
    	</tbody>
    </table>
