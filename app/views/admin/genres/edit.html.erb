<div class="container">
	<div class="row">
		<h3>ジャンル編集画面</h3>

		<%= form_for(@genre, url: admin_genre_path) do |f| %>

		<span>ジャンル
			<%= f.text_field :name %>
			<label><%=f.radio_button :is_active, "true"%>有効</label>
			<label><%=f.radio_button :is_active, "false"%>無効</label>
			<%= f.submit "変更を保存する",class:"btn btn-info" %>
		</span>
		<% end %>
	</div>
</div>